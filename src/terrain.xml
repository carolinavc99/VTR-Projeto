<?xml version="1.0" ?>
<project name="Terrain generation" width="512" height="512">
	<assets>
        <attributes>
            <attribute name="tex"   data="FLOAT" type="RENDERER" value=10 />
            <!-- simple perlin noise parameters -->
			<attribute type="COLOR" name="K" data="FLOAT" value=1 />
            <attribute type="COLOR" name="amp1" data="FLOAT" value=1000 />
            <!-- fractal perlin noise parameters -->
            <attribute type="COLOR" name="amp2" data="FLOAT" value=1000 />
            <!-- tessellation parameters -->
            <attribute name="level" data="FLOAT" type="RENDERER" value=10 />
			<attribute name="alpha" data="FLOAT" type="RENDERER" value=0.75 />
		</attributes>
		<scenes>
			<scene name="MainScene">
                <geometry name = "Grid" type = "GRID" LENGTH=5000  DIVISIONS=50>
                </geometry>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<POSITION x=0 y=700 z=2000 />
				<VIEW x=0.0 y=-0.5 z=-1.0 />
				<UP x=0 y=1 z=0 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-0.5" z="-2" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="terrain.mlib"/>
		</materialLibs>
		
	</assets>
	
	
	<pipelines>
	
        <pipeline name="simple perlin" defaultCamera = "MainCamera">
		
			<pass class="default" name="simple perlin" >
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" 
                                toMaterial="simplePerlin"  toLibrary="Terrain" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="fractal perlin" defaultCamera = "MainCamera">
		
			<pass class="default" name="fractal Perlin" >
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" 
                                toMaterial="fractalPerlin"  toLibrary="Terrain" />
				</materialMaps>
			</pass>
		</pipeline>
    </pipelines>

	
	<interface>
		<window label="settings" >
			<pipelineList label="effect" />

            <var label="K" type="COLOR" context="Terrain::simplePerlin" 
					component="K" def="min=0 max=3 step=0.1" />
            <var label="amp1" type="COLOR" context="Terrain::simplePerlin" 
					component="amp1" def="min=600 max=2100 step=2" />
            <var label="amp2" type="COLOR" context="Terrain::fractalPerlin" 
					component="amp2" def="min=600 max=2100 step=2" />
            <var label="level" type="RENDERER" context="CURRENT" component="level" 
                    def="min=1 max=64 step=0.01"/>
			<var label="alpha" type="RENDERER" context="CURRENT" component="alpha" 
                    def="min=0 max=2 step=0.01"/>
			<var label="tex" type="RENDERER" context="CURRENT" component="tex" 
                    def="min=1 max=15 step=0.1"/>
		</window>
	</interface>	
		

</project>